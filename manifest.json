{
  "manifest_version": 3,
  "name": "Git Helper",
  "version": "0.1.0",
  "description": "Git Helper makes life easier.",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_title": "GitLab AI Review",
    "default_icon": {
      "16": "icons/icon_16.png",
      "24": "icons/icon_24.png",
      "32": "icons/icon_32.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "http://kubernetes.docker.internal:8080/*",
    "http://localhost:8080/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://gitlab-ultimate.nationalcloud.ae/*/-/merge_requests/*",
        "*://gitlab-ultimate.nationalcloud.ae/*/merge_requests/*",
        "https://gitlab.com/*/-/merge_requests/*",
        "https://gitlab.com/*/merge_requests/*"
      ],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
    ,
    {
      "matches": [
        "*://gitlab-ultimate.nationalcloud.ae/*/-/merge_requests/new*",
        "*://gitlab-ultimate.nationalcloud.ae/*/merge_requests/new*",
        "https://gitlab.com/*/-/merge_requests/new*",
        "https://gitlab.com/*/merge_requests/new*"
      ],
      "js": ["src/content_new_mr.js"],
      "run_at": "document_idle"
    }
  ]
}
